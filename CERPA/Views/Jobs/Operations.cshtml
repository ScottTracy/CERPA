@model IEnumerable<CERPA.Models.Job>

@{
    ViewBag.Title = "Operations";
}

<h2>Operations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workstation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartID)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workstation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartID)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
<div>
    @Html.Partial("_Operations",ViewData["PickOrders"])

</div>
